{
  "widgets": [
    {
      "title": "Posts displayer",
      "description": "Display specific user posts",
      "version": "1.0.0",
      "category": "Posts",
      "type": "posts_displayer",
      "imageName": "banner",
      "content": {
        "endpoint": "https://jsonplaceholder.typicode.com/posts",
        "method": "GET",
        "requiresAuthentication": false,
        "cacheStrategy": "no-cache"
      },
      "containers": [
        "Full width"
      ],
      "widgetsLibrary": true,
      "settings": {
        "configurable": true,
        "editable": true,
        "removable": true,
        "shared": false,
        "movable": false
      },
      "configuration": {
        "properties": [
          {
            "name": "userId",
            "type": "number",
            "label": "User ID",
            "rules": {
              "required": true
            },
            "description": "Filter posts based on user ID",
            "defaultValue": 1
          }
        ]
      },
      "defaultConfig": {
        "userId": 1
      }
    }
  ]
}
